            USING SWITCH CASE B/W DAYS 
                  
 #include <iostream>
using namespace std;

int main()
{
int day = 4;
switch (day)
{
case 1:
cout << "Monday";
break;
case 2:
cout << "Tuesday";
break;
case 3:
cout << "Wednesday";
break;
case 4:
cout << "Thursday";
break;
case 5:
cout << "Friday";
break;
case 6:
cout << "Saturday";
break;
case 7:
cout << "Sunday";
break;
default:
cout<<"Wrong day No...";
}
cout<<"\nBye...";
return 0;
}
        
        
        FACTORIAL USING SWITCH CASE 
        
 #include <iostream>
using namespace std;

int main()
{
int n,f=1;
cout<<"Enter a no:";
cin>>n;
switch (n)
{
case 5:
  f=f*5;
case 4:
  f=f*4;
case 3:
  f=f*3;
case 2:
  f=f*2;
case 1:
case 0:
cout<<"Factorial = "<<f<<endl;
break;
default:
cout<<"Wrong no . . .";
}
cout<<"\nBye...";
return 0;
}

